
<h1 class="cursive"><%= current_user.first_name %>'s Wishlist</h1>
  <button type="button" class="btn btn-light"><a href='gifts/new'>Add a new item</a></button><br>
<% if current_user.wishlists.empty?%>
      <h1 class="cursive"><%= current_user.first_name %>'s Wishlist</h1>
      <p><a href='gifts/new'>Add a new item</a></p>
<%else%>
        <% current_user_wishlist = current_user.wishlists[0] %>
         <% wishlist_gifts = current_user_wishlist.gifts %>
    <br>
    <br>

    <table class="table table-striped table-bordered">
     <thead>
       <tr>
         <th>Gift</th>
         <th>Category</th>
         <th>Price</th>
         <th></th>
       </tr>
     </thead>

     <tbody>
       <% wishlist_gifts.order(:price).each do |gift| %>
         <tr>
          <% link = gift.url%>
           <td><a href=<%= link %>><%= gift.name %> </a></td>
           <td><%= gift.category %></td>
           <td>$<%= gift.price %></td>
           <td><%= link_to 'Delete item', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
     </tbody>
    </table>
<%end%>

